{% block footer %}

{#    {% include '../components/modal-window/modal-window.twig' %}#}
    <button @click="openPopup('modalForm')">открыть попап</button>
    <button @click="openPopup('modalText')">открыть попап</button>
    <button @click="openPopup('modalImage')">открыть попап</button>
    <modal-window ref="modalForm">
        <template slot="title" slot-scope="className1">Форма обратной связи  {{ className1 }}</template>
        <template slot="body">
            <form action="" @submit.prevent>
                <p :class="{ error:$v.form.age.$error }">
                    <input type="text" v-model="age" @blur="$v.form.age.$touch()">
                    <span v-if="$v.form.age.$error">Errrrrrrroooooooor</span>
                </p>

                <div>
                    <input type="text" v-model="name">
                    <span v-if="$v.form.name.$error">Errrrrrrroooooooor</span>
                </div>
                <div>
                    <input type="text" v-model="email">
                    <span v-if="$v.form.email.$error">Errrrrrrroooooooor</span>
                </div>
                <div>
                    <input type="text" v-model="phone">
                    <span v-if="$v.form.phone.$error">Errrrrrrroooooooor</span>
                </div>
                <button @click="$v.form.$touch()">отправить</button>
                <button @click="$v.form.$reset()">reset</button>
            </form>
        </template>
    </modal-window>
    <modal-window ref="modalText">
        <template slot="title">Текстовый попап</template>
        <template slot="body">Дофига текста</template>
    </modal-window>
    <modal-window ref="modalImage">
        <template slot="title">Галерея</template>
        <template slot="body">Картинки</template>
    </modal-window>

    {% include '../blocks/footer/main_footer.twig' %}

{% endblock %}



